<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#FAFAFA">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_frame"
            >

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                >
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/order_detail_number"
                    android:textSize="12sp"
                    android:textColor="#626262"
                    android:layout_centerVertical="true"
                    />

            <TextView
                    android:id="@+id/detail_order_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:singleLine="true"
                    android:textSize="12sp"
                    android:textColor="#626262"
                    android:layout_centerVertical="true"
                    />

        </RelativeLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/dotted_line"
                />

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                >
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/order_detail_money"
                    android:textSize="12sp"
                    android:textColor="#626262"
                    android:layout_centerVertical="true"
                    />

            <TextView
                    android:id="@+id/detail_order_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:singleLine="true"
                    android:textSize="12sp"
                    android:textColor="#626262"
                    android:layout_centerVertical="true"
                    />

        </RelativeLayout>

        <View
                android:id="@+id/view_seprate_5"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/dotted_line"
                />

        <RelativeLayout
                android:id="@+id/rl_pay_type"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                >
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/order_detail_pay_type"
                    android:textSize="12sp"
                    android:textColor="#626262"
                    android:layout_centerVertical="true"
                    />

            <TextView
                    android:id="@+id/detail_pay_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:singleLine="true"
                    android:textSize="12sp"
                    android:textColor="#626262"
                    android:layout_centerVertical="true"
                    />

        </RelativeLayout>

        <ImageView
                android:id="@+id/view_seprate_4"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:src="@drawable/dotted_line"
                />

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                >
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/order_detail_telephone"
                    android:textSize="12sp"
                    android:textColor="#626262"
                    android:layout_centerVertical="true"
                    />

            <TextView
                    android:id="@+id/detail_telephone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:singleLine="true"
                    android:textSize="12sp"
                    android:textColor="#626262"
                    android:layout_centerVertical="true"
                    />

        </RelativeLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/dotted_line"
                />

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                >
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/order_detail_coupons"
                    android:textSize="12sp"
                    android:textColor="#626262"
                    android:layout_centerVertical="true"
                    />

            <TextView
                    android:id="@+id/detail_coupons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:singleLine="true"
                    android:textSize="12sp"
                    android:textColor="#626262"
                    android:layout_centerVertical="true"
                    />

        </RelativeLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/dotted_line"
                />

        <RelativeLayout
                android:id="@+id/rl_receiverable"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                >
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/order_detail_receivable_money"
                    android:textSize="12sp"
                    android:textColor="#626262"
                    android:layout_centerVertical="true"
                    />

            <TextView
                    android:id="@+id/detail_receivable_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:singleLine="true"
                    android:textSize="12sp"
                    android:textColor="#626262"
                    android:layout_centerVertical="true"
                    />

        </RelativeLayout>


        <RelativeLayout
                android:id="@+id/rl_paid"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                >
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/order_detail_paid_money"
                    android:textSize="12sp"
                    android:textColor="#626262"
                    android:layout_centerVertical="true"
                    />

            <TextView
                    android:id="@+id/detail_paid_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:singleLine="true"
                    android:textSize="12sp"
                    android:textColor="#626262"
                    android:layout_centerVertical="true"
                    />

        </RelativeLayout>
    </LinearLayout>

    <Button
            android:id="@+id/btn_cash"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:gravity="center"
            android:background="@drawable/bg_btn"
            android:text="@string/order_detail_btn_cash"
            />

    <LinearLayout
            android:id="@+id/ll_product_detail_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:paddingLeft="15dp"
                android:layout_marginTop="26dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#626262"
                    android:textSize="12sp"
                    android:text="订单中共有"
                    />
            <TextView
                    android:id="@+id/tv_search_product_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FF6600"
                    android:textSize="10sp"
                    android:text="12"
                    android:padding="4dp"
                    />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#626262"
                    android:textSize="12sp"
                    android:text="件商品"
                    />
        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EAEAEA"
                />
    </LinearLayout>
    <LinearLayout
            android:id="@+id/ll_product_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                >
            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2.2"
                    android:layout_height="match_parent"
                    android:textColor="#626262"
                    android:gravity="bottom"
                    android:paddingBottom="4dp"
                    android:textSize="12sp"
                    android:text="@string/order_detail_product_number"
                    />
            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2.7"
                    android:layout_height="match_parent"
                    android:textColor="#626262"
                    android:textSize="12sp"
                    android:gravity="bottom"
                    android:paddingBottom="4dp"
                    android:text="@string/order_detail_product_name"
                    />
            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.8"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:paddingBottom="4dp"
                    android:textColor="#626262"
                    android:textSize="12sp"
                    android:text="@string/order_detail_product_price"
                    />
            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.7"
                    android:layout_height="match_parent"
                    android:textColor="#626262"
                    android:gravity="bottom"
                    android:paddingBottom="4dp"
                    android:textSize="12sp"
                    android:text="@string/order_detail_product_num"
                    />

            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="match_parent"
                    android:textColor="#626262"
                    android:gravity="bottom"
                    android:paddingBottom="4dp"
                    android:textSize="12sp"
                    android:text="@string/order_detail_product_cost"
                    />
        </LinearLayout>
        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EAEAEA"
                />
        <com.clinkworld.pay.views.PullRefreshListView
                android:id="@+id/product_list_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:cacheColorHint="@android:color/transparent"
                android:listSelector="@android:color/transparent"
                android:footerDividersEnabled="true"
                android:headerDividersEnabled="false"
                android:divider="@drawable/dotted_line"
                android:layerType="software"
                android:dividerHeight="2dp"
                android:scrollbars="none"
                />
    </LinearLayout>
</LinearLayout>
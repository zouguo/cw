<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            >
        <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                >
            <TextView
                    android:id="@+id/type_coupons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/coupons_create_type"
                    android:textSize="12sp"
                    android:textColor="#595959"
                    />

            <EditText
                    android:id="@+id/et_coupons_type"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/type_coupons"
                    android:gravity="center_vertical|right"
                    android:hint="@string/coupons_create_choose"
                    android:textColorHint="#C4C4C4"
                    android:textSize="12sp"
                    android:editable="false"
                    android:background="@null"
                    android:textColor="#626262"
                    android:singleLine="true"
                    android:layout_alignParentRight="true"
                    />
        </RelativeLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EAEAEA"
                />

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                >
            <TextView
                    android:id="@+id/couponse_name_prompt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/coupons_create_name"
                    android:textSize="12sp"
                    android:textColor="#595959"
                    />

            <EditText
                    android:id="@+id/et_input_coupons_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/coupons_create_input"
                    android:layout_alignParentRight="true"
                    android:textColorHint="#C4C4C4"
                    android:textColor="#626262"
                    android:textSize="12sp"
                    android:layout_toRightOf="@id/couponse_name_prompt"
                    android:background="@null"
                    android:singleLine="true"
                    android:gravity="right|center_vertical"
                    android:layout_centerVertical="true"
                    />
        </RelativeLayout>


        <View
                android:id="@+id/view_spreate_1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EAEAEA"
                android:visibility="gone"
                />

        <RelativeLayout
                android:id="@+id/rl_coupons_discount"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:visibility="gone"
                >
            <TextView
                    android:id="@+id/zhekout_coupons_prompt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/coupons_create_discount"
                    android:textSize="12sp"
                    android:textColor="#595959"
                    />

            <EditText
                    android:id="@+id/et_input_coupons_discount"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/coupons_create_input"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@id/zhekout_coupons_prompt"
                    android:textColorHint="#C4C4C4"
                    android:inputType="phone"
                    android:digits="1234567890."
                    android:textSize="12sp"
                    android:background="@null"
                    android:singleLine="true"
                    android:gravity="right|center_vertical"
                    android:layout_centerVertical="true"
                    />
        </RelativeLayout>


        <View
                android:id="@+id/view_seprate_3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EAEAEA"
                android:visibility="gone"
                />

        <RelativeLayout
                android:id="@+id/rl_coupons_max_discount"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:visibility="gone"
                >
            <TextView
                    android:id="@+id/zhekou_prompt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/coupons_create_max_discount_money"
                    android:textSize="12sp"
                    android:textColor="#595959"
                    />

            <EditText
                    android:id="@+id/et_input_coupons_max_discount"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/coupons_create_input"
                    android:layout_toRightOf="@id/zhekou_prompt"
                    android:layout_alignParentRight="true"
                    android:textColorHint="#C4C4C4"
                    android:digits="1234567890."
                    android:textSize="12sp"
                    android:inputType="phone"
                    android:background="@null"
                    android:singleLine="true"
                    android:gravity="right|center_vertical"
                    android:layout_centerVertical="true"
                    />

            <TextView
                    android:id="@+id/tv_input_max_discount_prompt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="#626262"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="40dp"
                    android:textSize="12sp"
                    android:text="￥"
                    android:visibility="gone"
                    />

        </RelativeLayout>


        <View
                android:id="@+id/view_seprate_2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EAEAEA"
                />

        <RelativeLayout
                android:id="@+id/rl_coupons_money"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                >
            <TextView
                    android:id="@+id/mianzhi_prompt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/coupons_create_money"
                    android:textSize="12sp"
                    android:textColor="#595959"
                    />

            <EditText
                    android:id="@+id/et_input_coupons_money"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/mianzhi_prompt"
                    android:hint="@string/coupons_create_input"
                    android:layout_alignParentRight="true"
                    android:textColorHint="#C4C4C4"
                    android:digits="1234567890."
                    android:inputType="phone"
                    android:textSize="12sp"
                    android:maxWidth="40dp"
                    android:background="@null"
                    android:singleLine="true"
                    android:gravity="right|center_vertical"
                    android:layout_centerVertical="true"
                    />

            <TextView
                    android:id="@+id/tv_input_mianzhi_prompt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:textColor="#626262"
                    android:layout_marginRight="40dp"
                    android:textSize="12sp"
                    android:text="￥"
                    android:visibility="gone"
                    />

        </RelativeLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EAEAEA"
                />

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                >
            <TextView
                    android:id="@+id/send_quantity_prompt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/coupons_create_send_quantity"
                    android:textSize="12sp"
                    android:textColor="#595959"
                    />

            <EditText
                    android:id="@+id/et_input_send_quantity"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/coupons_create_choose"
                    android:layout_alignParentRight="true"
                    android:textColorHint="#C4C4C4"
                    android:layout_toRightOf="@id/send_quantity_prompt"
                    android:textSize="12sp"
                    android:editable="false"
                    android:textColor="#626262"
                    android:background="@null"
                    android:singleLine="true"
                    android:gravity="right|center_vertical"
                    android:layout_centerVertical="true"
                    />
        </RelativeLayout>
        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EAEAEA"
                />
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                >
            <TextView
                    android:id="@+id/condition_max_money_prompt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/coupons_create_full_transaction"
                    android:textSize="12sp"
                    android:textColor="#595959"
                    />
            <EditText
                    android:id="@+id/et_input_full_transactiony"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/coupons_create_input"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@id/condition_max_money_prompt"
                    android:textColorHint="#C4C4C4"
                    android:digits=".1234567890"
                    android:inputType="phone"
                    android:textSize="12sp"
                    android:maxWidth="40dp"
                    android:background="@null"
                    android:singleLine="true"
                    android:gravity="right|center_vertical"
                    android:layout_centerVertical="true"
                    />

            <TextView
                    android:id="@+id/tv_input_money_prompt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="40dp"
                    android:textColor="#626262"
                    android:textSize="12sp"
                    android:text="￥"
                    android:visibility="gone"
                    />

        </RelativeLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EAEAEA"
                />

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                >
            <TextView
                    android:id="@+id/time_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/coupons_create_start_time"
                    android:textSize="12sp"
                    android:textColor="#595959"
                    />

            <TextView
                    android:id="@+id/et_choose_start_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/coupons_create_choose"
                    android:layout_toRightOf="@id/time_1"
                    android:layout_alignParentRight="true"
                    android:textColor="#C4C4C4"
                    android:textSize="12sp"
                    android:singleLine="true"
                    android:gravity="right|center_vertical"
                    android:layout_centerVertical="true"
                    />
        </RelativeLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EAEAEA"
                />

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                >
            <TextView
                    android:id="@+id/time_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/coupons_create_end_time"
                    android:textSize="12sp"
                    android:textColor="#595959"
                    />

            <TextView
                    android:id="@+id/et_choose_end_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/coupons_create_choose"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@id/time_2"
                    android:textColor="#C4C4C4"
                    android:textSize="12sp"
                    android:singleLine="true"
                    android:gravity="right|center_vertical"
                    android:layout_centerVertical="true"
                    />
        </RelativeLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EAEAEA"
                />

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                >
            <TextView
                    android:id="@+id/xianling_prompt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/coupons_create_limit_collar"
                    android:textSize="12sp"
                    android:textColor="#595959"
                    />

            <EditText
                    android:id="@+id/et_choose_limit_collar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/coupons_create_choose"
                    android:layout_alignParentRight="true"
                    android:textColorHint="#C4C4C4"
                    android:textSize="12sp"
                    android:layout_toRightOf="@id/xianling_prompt"
                    android:editable="false"
                    android:textColor="#626262"
                    android:background="@null"
                    android:singleLine="true"
                    android:gravity="right|center_vertical"
                    android:layout_centerVertical="true"
                    />


        </RelativeLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EAEAEA"
                />

    </LinearLayout>

</LinearLayout>
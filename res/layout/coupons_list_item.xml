<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_frame_1"
        >
    <LinearLayout
            android:id="@+id/ll_coupons_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            >
        <TextView
                android:id="@+id/tv_coupons_itme"
                android:layout_width="0dp"
                android:layout_weight="2.3"
                android:layout_height="113dp"
                android:text="￥15"
                android:textSize="21sp"
                android:gravity="center"
                android:textColor="#008BF7"
                />

        <View
                android:layout_width="2dp"
                android:layout_height="64dp"
                android:background="@drawable/dotted_line"
                android:layout_gravity="center_vertical"
                />
        <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="7.5"
                android:layout_height="113dp"
                android:paddingLeft="16dp"
                >

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    >
                <TextView
                        android:id="@+id/tv_max_coupons"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="最多折扣￥30"
                        android:textSize="11sp"
                        android:textColor="#626262"
                        />
                <TextView
                        android:id="@+id/tv_use_condition"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="单笔满120元可用"
                        android:textSize="11sp"
                        android:textColor="#626262"
                        />
                <TextView
                        android:id="@+id/tv_validity_period"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="有效期：2015-09-12至10-25"
                        android:textSize="11sp"
                        android:textColor="#626262"
                        />
                <LinearLayout
                        android:id="@+id/ll_coupons_number"
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                    <TextView
                            android:id="@+id/tv_coupons_quantity"
                            android:text="发送1236张"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="11sp"
                            android:paddingRight="10dp"
                            android:textColor="#626262"
                            />
                    <TextView
                            android:id="@+id/tv_coupons_send_quantity"
                            android:text="已领1200/76%"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="11sp"
                            android:paddingRight="10dp"
                            android:textColor="#626262"
                            />
                    <TextView
                            android:id="@+id/tv_coupons_use_quantity"
                            android:text="已领1200/76%"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="11sp"
                            android:paddingRight="10dp"
                            android:textColor="#626262"
                            />
                </LinearLayout>
                <LinearLayout
                        android:id="@+id/ll_send_coupons"
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                    <Button
                            android:id="@+id/btn_link"
                            android:layout_width="63dp"
                            android:layout_height="27dp"
                            android:text="链接发券"
                            android:textColor="#595959"
                            android:textSize="10sp"
                            android:gravity="center"
                            android:background="@drawable/bg_frame"
                            />
                    <Button
                            android:id="@+id/btn_qrcode"
                            android:layout_width="75dp"
                            android:layout_height="27dp"
                            android:layout_marginLeft="12dp"
                            android:text="二维码发券"
                            android:textColor="#595959"
                            android:textSize="10sp"
                            android:gravity="center"
                            android:background="@drawable/bg_frame"
                            />
                    <Button
                            android:id="@+id/btn_disable"
                            android:layout_width="63dp"
                            android:layout_height="27dp"
                            android:layout_marginLeft="12dp"
                            android:text="停用"
                            android:textColor="#595959"
                            android:textSize="10sp"
                            android:gravity="center"
                            android:background="@drawable/bg_frame"
                            />

                </LinearLayout>
            </LinearLayout>

            <ImageView
                    android:id="@+id/iv_coupons_disabled"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="-5dp"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/icon_coupons_disabled"
                    android:visibility="gone"
                    />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
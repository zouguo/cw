<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
        >
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="233dp"
                    >
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/bg_default"
                        />
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        >
                    <ImageView
                            android:id="@+id/iv_company_icon"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/icon_default"
                            />

                    <TextView
                            android:id="@+id/tv_company_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="@color/white"
                            android:layout_marginTop="15dp"
                            android:layout_gravity="center_horizontal"
                            />

                    <TextView
                            android:id="@+id/tv_platform_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="@color/white"
                            android:layout_marginTop="15dp"
                            android:layout_gravity="center_horizontal"
                            />

                    <LinearLayout
                            android:layout_marginTop="20dip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="10dp"
                                android:gravity="center"
                                >
                            <TextView
                                    android:id="@+id/tv_mearchant_id"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12sp"
                                    android:textColor="@color/white"
                                    />
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/white"
                                    android:text="@string/home_merchant_id"
                                    />

                        </LinearLayout>


                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="10dp"
                                android:gravity="center"
                                >
                            <TextView
                                    android:id="@+id/tv_merchant_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12sp"
                                    android:textColor="@color/white"
                                    />
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/white"
                                    android:text="@string/home_merchant_name"
                                    />

                        </LinearLayout>


                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="10dp"
                                android:gravity="center"
                                >
                            <TextView
                                    android:id="@+id/tv_work_id"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12sp"
                                    android:textColor="@color/white"
                                    />
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/white"
                                    android:text="@string/home_work_id"
                                    />

                        </LinearLayout>


                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="10dp"
                                android:gravity="center"
                                >
                            <TextView
                                    android:id="@+id/tv_home_user_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12sp"
                                    android:textColor="@color/white"
                                    />
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/white"
                                    android:text="@string/home_user_name"
                                    />

                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>
            </FrameLayout>
            <LinearLayout
                    android:id="@+id/ll_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                <RelativeLayout
                        android:id="@+id/rl_part_cash"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@drawable/bg_home_part"
                        >

                    <ImageView
                            android:id="@+id/iv_part_cash"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_cash"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center_vertical"
                            />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/home_part_cash"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@id/iv_part_cash"
                            android:textColor="@color/text_color_1"
                            />
                </RelativeLayout>
                <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/line_color"
                        />

                <RelativeLayout
                        android:id="@+id/rl_part_mc"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@drawable/bg_home_part"
                        >

                    <ImageView
                            android:id="@+id/iv_part_mc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_product_manager"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center_vertical"
                            />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/home_part_merchandise_control"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@id/iv_part_mc"
                            android:textColor="@color/text_color_1"
                            />
                </RelativeLayout>


            </LinearLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line_color"
                    />
            <LinearLayout
                    android:id="@+id/ll_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                <RelativeLayout
                        android:id="@+id/rl_part_order"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@drawable/bg_home_part"
                        >

                    <ImageView
                            android:id="@+id/iv_part_order"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_order"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center_vertical"
                            />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/home_part_order"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@id/iv_part_order"
                            android:textColor="@color/text_color_1"
                            />
                </RelativeLayout>

                <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/line_color"
                        />

                <RelativeLayout
                        android:id="@+id/rl_part_coupons"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@drawable/bg_home_part"
                        >

                    <ImageView
                            android:id="@+id/iv_part_coupons"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_coupons"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center_vertical"
                            />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/home_part_coupons"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@id/iv_part_coupons"
                            android:textColor="@color/text_color_1"
                            />
                </RelativeLayout>

            </LinearLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line_color"
                    />
            <Button
                    android:id="@+id/home_btn_exit_platform"
                    android:layout_marginTop="27dp"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:background="@drawable/bg_btn"
                    android:text="@string/home_exit_platform"
                    />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="30dp"
                    android:text="@string/home_technical_support"
                    android:layout_gravity="center_horizontal"
                    android:textSize="11sp"
                    android:textColor="#c4c4c4"
                    />

        </LinearLayout>
    </ScrollView>
</LinearLayout>

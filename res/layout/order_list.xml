<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#FAFAFA">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:background="#EAEAEA"
            >

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_centerInParent="true"
                android:background="@drawable/bg_white_et"
                android:gravity="center_vertical"
                >
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_search"
                    />
            <EditText
                    android:id="@+id/et_input_order_number"
                    android:layout_marginLeft="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:imeOptions="actionSearch"
                    android:singleLine="true"
                    android:background="@null"
                    android:textColor="#595959"
                    android:textColorHint="#CCCCCC"
                    android:textSize="14dp"
                    android:hint="@string/order_search_input_number"
                    />

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            >
        <TextView
                android:layout_width="0dp"
                android:layout_weight="2.2"
                android:layout_height="match_parent"
                android:textColor="#626262"
                android:gravity="bottom"
                android:paddingBottom="4dp"
                android:textSize="14sp"
                android:text="@string/order_search_item_number"
                />
        <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:textColor="#626262"
                android:textSize="14sp"
                android:gravity="bottom"
                android:paddingBottom="4dp"
                android:text="@string/order_search_item_posnumber"
                />
        <TextView
                android:id="@+id/tv_1"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:paddingBottom="4dp"
                android:textColor="#626262"
                android:textSize="14sp"
                android:text="@string/order_list_create_time"
                />
        <TextView
                android:id="@+id/tv_2"
                android:layout_width="0dp"
                android:layout_weight="1.8"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:paddingBottom="4dp"
                android:textColor="#626262"
                android:textSize="14sp"
                android:text="@string/order_list_complete_time"
                />
        <TextView
                android:id="@+id/tv_3"
                android:layout_width="0dp"
                android:layout_weight="1.8"
                android:layout_height="match_parent"
                android:textColor="#626262"
                android:gravity="bottom"
                android:paddingBottom="4dp"
                android:textSize="14sp"
                android:text="@string/order_search_item_status"
                />
    </LinearLayout>
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EAEAEA"
            />
    <com.clinkworld.pay.views.PullRefreshListView
            android:id="@+id/order_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:cacheColorHint="@android:color/transparent"
            android:listSelector="@android:color/transparent"
            android:footerDividersEnabled="true"
            android:headerDividersEnabled="false"
            android:divider="@drawable/dotted_line"
            android:layerType="software"
            android:dividerHeight="2dp"
            android:scrollbars="none"
            />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >
    <LinearLayout
            android:id="@+id/ll_top"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            >
        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EAEAEA"
                />
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
            <TextView
                    android:id="@+id/tv_reset"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/reset"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="#595959"
                    />

            <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="#EAEAEA"
                    />


            <TextView
                    android:id="@+id/tv_cash"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/cash"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="#595959"
                    />
        </LinearLayout>
    </LinearLayout>
    <ScrollView
            android:layout_above="@id/ll_top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            >
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#fafafa"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:gravity="center_vertical"
                    >
                <TextView
                        android:id="@+id/tv_pos_number"
                        android:textColor="#626262"
                        android:paddingLeft="5dp"
                        android:layout_width="0dp"
                        android:layout_weight="4.1"
                        android:layout_height="wrap_content"
                        android:text="POS机编号：001"
                        android:textSize="12sp"
                        />

                <TextView
                        android:id="@+id/tv_workid"
                        android:textColor="#626262"
                        android:paddingLeft="5dp"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        />

                <TextView
                        android:id="@+id/tv_user_name"
                        android:textColor="#626262"
                        android:paddingLeft="5dp"
                        android:layout_width="0dp"
                        android:layout_weight="2.8"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        />
            </LinearLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EAEAEA"
                    />

            <Button
                    android:id="@+id/iv_capture"
                    android:layout_marginTop="25dp"
                    android:layout_width="163dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/btn_capture_barcode"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:background="@drawable/bg_btn"
                    />

            <RelativeLayout
                    android:layout_marginTop="30dip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    >

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#595959"
                        android:textSize="15sp"
                        android:layout_centerVertical="true"
                        android:text="@string/vip_phone"
                        />
                <EditText
                        android:id="@+id/et_input_vip_phone"
                        android:layout_marginLeft="100dip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:singleLine="true"
                        android:background="@null"
                        android:textColor="#595959"
                        android:textColorHint="#C4C4C4"
                        android:gravity="right"
                        android:textSize="15sp"
                        android:hint="@string/prompt_input_vip_phone"
                        />

            </RelativeLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EAEAEA"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    />
            <RelativeLayout
                    android:layout_marginTop="30dip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    >

                <TextView
                        android:id="@+id/coupons_prompt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#595959"
                        android:textSize="15sp"
                        android:layout_centerVertical="true"
                        android:text="@string/scan_coupons"
                        />

                <LinearLayout
                        android:id="@+id/ll_capture_qrcode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="13dp"
                        >
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_capture"
                            android:layout_gravity="center"
                            />
                </LinearLayout>

                <EditText
                        android:id="@+id/et_input_coupons"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:imeOptions="actionSearch"
                        android:layout_toRightOf="@id/coupons_prompt"
                        android:singleLine="true"
                        android:background="@null"
                        android:inputType="number"
                        android:textColor="#595959"
                        android:textColorHint="#C4C4C4"
                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@id/ll_capture_qrcode"
                        android:gravity="right"
                        android:textSize="15sp"
                        android:hint="@string/prompt_input_coupons"
                        />

            </RelativeLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EAEAEA"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="3dp"
                    />


            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    >
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#595959"
                        android:textSize="15sp"
                        android:text="已扫描商品"
                        />
                <TextView
                        android:id="@+id/tv_number_product"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ff6600"
                        android:textSize="15sp"
                        android:text="0"
                        android:padding="4dp"
                        />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#595959"
                        android:textSize="15sp"
                        android:text="件"
                        />
            </LinearLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EAEAEA"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    />

            <LinearLayout
                    android:layout_marginTop="30dip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="21dp"
                        android:layout_marginRight="21dp"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        >

                    <TextView
                            android:id="@+id/item_product_barcode"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2.3"
                            android:textColor="#626262"
                            android:textSize="14sp"
                            android:text="@string/product_barcode"
                            />

                    <TextView
                            android:id="@+id/item_product_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.9"
                            android:textColor="#626262"
                            android:textSize="14sp"
                            android:text="@string/product_name"
                            />
                    <TextView
                            android:id="@+id/item_product_price"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.4"
                            android:textColor="#626262"
                            android:textSize="14sp"
                            android:text="@string/product_price"
                            />
                    <TextView
                            android:id="@+id/item_product_number"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2.6"
                            android:textColor="#626262"
                            android:textSize="14sp"
                            android:text="@string/product_number"
                            />
                    <TextView
                            android:id="@+id/item_product_cost"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.4"
                            android:textColor="#626262"
                            android:textSize="14sp"
                            android:gravity="right"
                            android:text="@string/product_cost"
                            />
                </LinearLayout>
                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#EAEAEA"
                        android:layout_marginLeft="21dp"
                        android:layout_marginRight="21dp"
                        android:layout_marginTop="4dp"
                        />
                <LinearLayout
                        android:id="@+id/ll_capture_product"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="22dp"
                        android:layout_marginRight="22dp"
                        android:orientation="vertical"
                        >
                </LinearLayout>

                <LinearLayout
                        android:id="@+id/ll_has_no_product"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:visibility="visible"
                        >
                    <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            />

                    <TextView
                            android:layout_marginTop="30dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/has_no_product"
                            android:textColor="#c4c4c4"
                            android:textSize="14sp"
                            />
                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    >
                <TextView
                        android:id="@+id/all_cost_prompt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#595959"
                        android:textSize="15sp"
                        android:text="@string/all_cost"
                        />
                <EditText
                        android:id="@+id/et_all_cost"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:imeOptions="actionNext"
                        android:singleLine="true"
                        android:layout_toRightOf="@id/all_cost_prompt"
                        android:background="@null"
                        android:digits="0123456789."
                        android:inputType="phone"
                        android:textColor="#595959"
                        android:focusable="true"
                        android:textColorHint="#C4C4C4"
                        android:gravity="right"
                        android:hint="请输入"
                        android:textSize="15sp"
                        />
            </RelativeLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EAEAEA"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    />

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    >
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#595959"
                        android:textSize="15sp"
                        android:text="@string/deductible_cost"
                        />
                <TextView
                        android:id="@+id/tv_deductible_cost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="#595959"
                        android:textSize="15sp"
                        />
            </RelativeLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EAEAEA"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="53dp"
                    android:layout_marginTop="10dp"
                    />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            >
        <TextView
                android:id="@+id/tv_storage_detail_no"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textColor="#626262"
                android:gravity="left|center_vertical"
                android:textSize="12sp"
                />
        <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                >

            <TextView
                    android:id="@+id/tv_storage_detail_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#626262"
                    android:textSize="12sp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    />
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/tv_storage_detail_date"
                    android:src="@drawable/ic_time"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    />

        </RelativeLayout>

    </LinearLayout>
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EAEAEA"
            />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            >
        <TextView
                android:layout_width="0dp"
                android:layout_weight="3.8"
                android:layout_height="match_parent"
                android:textColor="#626262"
                android:gravity="bottom"
                android:paddingBottom="4dp"
                android:textSize="12sp"
                android:text="@string/storage_detail_product"
                />
        <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:textColor="#626262"
                android:textSize="12sp"
                android:gravity="bottom"
                android:paddingBottom="4dp"
                android:text="@string/storage_detail_number"
                />
        <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:paddingBottom="4dp"
                android:textColor="#626262"
                android:textSize="12sp"
                android:text="@string/storage_detail_purchasing"
                />
        <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textColor="#626262"
                android:gravity="bottom"
                android:paddingBottom="4dp"
                android:textSize="12sp"
                android:text="@string/storage_deatil_price"
                />
    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EAEAEA"
            />

    <com.clinkworld.pay.views.PullRefreshListView
            android:id="@+id/storage_detail_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:cacheColorHint="@android:color/transparent"
            android:listSelector="@android:color/transparent"
            android:divider="@drawable/dotted_line"
            android:footerDividersEnabled="true"
            android:headerDividersEnabled="false"
            android:dividerHeight="1dp"
            android:scrollbars="none"
            />


</LinearLayout>
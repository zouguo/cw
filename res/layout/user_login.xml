<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            >

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_login"
                    />
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:orientation="vertical"
                    >

                <EditText
                        android:id="@+id/et_input_platform"
                        android:layout_marginTop="13dp"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:imeOptions="actionNext"
                        android:singleLine="true"
                        android:hint="@string/prompt_input_platform"
                        android:textColorHint="#C4C4C4"
                        android:background="@drawable/bg_et"
                        android:textSize="12sp"
                        />

                <EditText
                        android:id="@+id/et_input_mechant"
                        android:layout_marginTop="13dp"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:imeOptions="actionNext"
                        android:singleLine="true"
                        android:textColorHint="#C4C4C4"
                        android:hint="@string/prompt_input_merchant"
                        android:background="@drawable/bg_et"
                        android:textSize="12sp"
                        />


                <EditText
                        android:id="@+id/et_input_username"
                        android:layout_marginTop="13dp"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:singleLine="true"
                        android:imeOptions="actionNext"
                        android:textColorHint="#C4C4C4"
                        android:hint="@string/prompt_input_username"
                        android:background="@drawable/bg_et"
                        android:textSize="12sp"
                        />


                <EditText
                        android:id="@+id/et_input_password"
                        android:layout_marginTop="13dp"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:imeOptions="actionDone"
                        android:inputType="textPassword"
                        android:textColorHint="#C4C4C4"
                        android:singleLine="true"
                        android:hint="@string/prompt_input_password"
                        android:background="@drawable/bg_et"
                        android:textSize="12sp"
                        />
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        >

                    <CheckBox
                            android:id="@+id/btn_check"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="7dp"
                            style="@style/custom_checkbox"
                            android:checked="false"
                            />
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:text="记住登录帐号"
                            android:textColor="#C4C4C4"
                            />
                </LinearLayout>

                <Button
                        android:id="@+id/btn_login"
                        android:layout_marginTop="24dp"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:gravity="center"
                        android:background="@drawable/bg_btn"
                        android:text="@string/login"
                        />

                <RelativeLayout
                        android:id="@+id/ll_rest_password"
                        android:layout_marginTop="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                    <TextView
                            android:id="@+id/tv_reset_data"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/login_rest_data"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:textColor="#C0C0C0"
                            android:textSize="15sp"
                            />

                    <ImageView
                            android:layout_toLeftOf="@id/tv_reset_data"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_prompt"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5dp"
                            />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>